# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/college_finder_tn
MONGODB_TEST_URI=mongodb://localhost:27017/college_finder_tn_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ML Prediction Service
ML_SERVICE_URL=http://localhost:8000
ML_API_KEY=your_ml_api_key

# External APIs
NIRF_API_URL=https://api.nirf.gov.in
NBA_API_URL=https://api.nba-india.org

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
